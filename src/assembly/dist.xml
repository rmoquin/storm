<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>distribution</id>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>${basedir}/bin</directory>
      <includes>
        <include>**/*</include>
      </includes>
      <outputDirectory>/bin</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/deps</directory>
      <includes>
        <include>**/*</include>
      </includes>
      <outputDirectory>/lib</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/ui/public</directory>
      <includes>
        <include>**/*</include>
      </includes>
      <outputDirectory>/public</outputDirectory>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${project.build.directory}/${project.build.finalName}.jar</source>
      <outputDirectory>/</outputDirectory>
    </file>
    <file>
      <source>${basedir}/conf/storm.yaml.example</source>
      <outputDirectory>/conf</outputDirectory>
      <destName>storm.yaml</destName>
    </file>
    <file>
      <source>${basedir}/log4j/storm.log.properties</source>
      <outputDirectory>/log4j</outputDirectory>
    </file>
    <file>
      <source>${basedir}/CHANGELOG.md</source>
      <outputDirectory>/</outputDirectory>
    </file>
    <file>
      <source>${basedir}/LICENSE.html</source>
      <outputDirectory>/</outputDirectory>
    </file>
    <file>
      <source>${basedir}/README.markdown</source>
      <outputDirectory>/</outputDirectory>
    </file>
    <file>
      <source>${basedir}/src/assembly/resources/RELEASE</source>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
    </file>
  </files>
</assembly>